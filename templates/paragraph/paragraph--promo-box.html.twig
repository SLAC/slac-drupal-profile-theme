{% if content.field_links|field_value and content.field_links|field_value|length < 5 %}
  {% set attributes = attributes.addClass('c-promo-box--small') %}
{% endif %}

{% set promo_box %}
{% include '@components/promo-box/promo-box.twig' with {
  promo_box_kicker: content.field_text|field_value,
  promo_box_url: content.field_link|field_value,
  promo_box_title: content.field_title|field_value,
  promo_box_content: content.field_links|field_value,
} %}
{% endset %}

{% if is_nested %}{{ promo_box }}{% else %}
  {% include '@layouts/section/section.twig' with {
    section_content: promo_box,
    has_constrain: true
  } %}
{% endif %}
