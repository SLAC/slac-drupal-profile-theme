{% embed '@layouts/footer/footer.twig' with {
  'has_constrain': true,
} %}

  {% block footer_contact %}
    {% if site_setting_entity_by_name('organization_details') %}
      <strong>{% if site_setting_entity_by_name('organization_details').field_acronym.value %}{{ site_setting_entity_by_name('organization_details').field_acronym.value }} | {% endif %}{{ site_setting_entity_by_name('organization_details').field_organization_name.value }}</strong>
      {% if site_setting_entity_by_name('organization_details').field_address.value %}
        <address>
          {% if site_setting_entity_by_name('organization_details').field_address.address_line1 %}{{ site_setting_entity_by_name('organization_details').field_address.address_line1 }}<br>{% endif %}
          {% if site_setting_entity_by_name('footer_address').field_body.value %}{{ site_setting_entity_by_name('footer_address').field_body.value|striptags }}<br>{% endif %}
          {% if site_setting_entity_by_name('organization_details').field_address.locality %}{{ site_setting_entity_by_name('organization_details').field_address.locality }}, {% endif %}{{ site_setting_entity_by_name('organization_details').field_address.administrative_area }} {{ site_setting_entity_by_name('organization_details').field_address.postal_code }}<br>
          {% if site_setting_entity_by_name('organization_details').field_text.value %}{{ site_setting_entity_by_name('organization_details').field_text.value }}{% endif %}
        </address>
    {% endif %}
  {% endif %}
  {{ content }}
  {% endblock %}

  {% block footer_social %}
    {{ drupal_entity('block', 'footer_social_links', check_access=false) }}
  {% endblock %}

  {% block footer_menu %}
    {{ drupal_entity('block', 'footer_menu', check_access=false) }}
  {% endblock %}

  {% block footer_global_menu %}
    {% include '@components/menu/menu--footer-utility/menu--footer-utility.twig' with {
      'items': [
        {
          'title': 'Staff portal'|t,
          'url': 'https://intranet.slac.stanford.edu/'
        },
        {
          'title': 'Privacy policy'|t,
          'url': 'https://www6.slac.stanford.edu/privacy-policy'
        },
        {
          'title': 'Accessibility'|t,
          'url': 'https://www.stanford.edu/site/accessibility/'
        },
        {
          'title': 'Vulnerability disclosure'|t,
          'url': 'https://www.energy.gov/vulnerability-disclosure-policy'
        }
      ]
    } %}
  {% endblock %}

  {% block footer_utility_menu %}
    {{ drupal_entity('block', 'footer_utility', check_access=false) }}
  {% endblock %}

  {% endembed %}
