{% set classes = [
  'c-citation',
  modifier_classes ? modifier_classes : ''
] %}

<div {{ add_attributes({ class: classes } ) }}>
  {{ author }}
  {{ year ? '(' ~ year ~ '). ' : '' }}
  <a href="{{ url }}" class="c-citation__link">
    {{ title ~ '.' -}}
  </a>
  <span class="c-citation__publisher">
    {{ publication_info ~ '. ' }}
  </span>
  {{ doi_link }}
</div>
